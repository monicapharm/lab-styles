<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Material">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#4b2e83</item>
        <item name="colorAccent">#b7a57a</item>
    </style>


    <style name="TextStyles">
        <item name="android:textSize">20dp</item>
        <item name="android:width">150dp</item>
        <item name="android:height">60dp</item>
        <item name="android:textColor">#4b2e83</item>
    </style>

    <style name="iconStyles">
        <item name="android:tint">#fff</item>
    </style>

    <style name="TextStyles.Label" parent="@style/TextStyles">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyles.Label.Gold" parent="@style/TextStyles.Label">
        <item name="android:background">#b7a57a</item>
    </style>

    <style name="ButtonStyles" parent="@android:style/MediaButton">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MyTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#4b2e83</item>
    </style>

</resources>
